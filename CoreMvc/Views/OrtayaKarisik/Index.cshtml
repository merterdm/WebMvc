@model OrtayaKarisikDto

<table class="table table-hover">
    <thead>
        <tr>
            <td>Id</td>
            <td>Category Name</td>
            <td>Description</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
            </tr>
        }    
    </tbody>

</table>

