@model Shipper


<div class="card">
    <div class="card-header">
        <h3>Yeni Firma</h3>
    </div>
    <div class="card-body">
        <form asp-action="Update" asp-controller="Shipper" method="post">

            <input type="hidden" asp-for="@Model.ShipperId" />
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.CompanyName" class="form-label">Firma Adi</label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.CompanyName" placeholder="Şirket Adi">
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="Phone" class="form-label">Telefon </label>
                    </div>
                    <div class="col-7">
                        <input type="text" placeholder="Telefon"
                               class="form-control" asp-for="@Model.Phone" />
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a type="button" class="btn btn-info" asp-action="Index" asp-controller="Shipper">Geri Don</a>
            </div>
        </form>
    </div>
</div>