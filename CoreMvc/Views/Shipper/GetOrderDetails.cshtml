@model ICollection<OrderDetail>


<div class="card">
    <div class="card-header">
        <h3>Order Details</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    
                    <th>Detail Id</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Adet</th>
                    <th>Fiyat</th>
                    <th>Toplam Tutar</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                       
                        <td> @item.OrderId</td>
                        <td>@item.Product.ProductName</td>
                        <td>@item.Product.Category.CategoryName</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice</td>
                        <td>@((item.Quantity*item.UnitPrice).ToString("C2")) </td>
                        @*<td>
                    <a class="btn btn-primary" asp-action="Update" asp-controller="Shipper" asp-route-id="@item.ShipperId">Guncelle</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Shipper" asp-route-id="@item.ShipperId">Sil</a>
                    </td>*@
                    </tr>
                }
            </tbody>


        </table>
    </div>

</div>
