@model EmployeeInsertDTO

<div class="card">
    <div class="car-header">
        <h3>yeni Personel Girisi</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="Employee" method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.FirstName" class="form-label">Adi</label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.FirstName" placeholder="Adi">
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.LastName" class="form-label">Soyadi </label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.LastName" placeholder="Adi">
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.Title" class="form-label">Title</label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.Title" placeholder="Title">
                        <span asp-validation-for="@Model.Title" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.BirtDate" class="form-label">Dogum Tarihi</label>
                    </div>
                    <div class="col-7">
                        <input type="datetime-local" class="form-control" asp-for="@Model.BirtDate" placeholder="Dogujm Tarihi">
                        <span asp-validation-for="@Model.BirtDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a type="button" class="btn btn-info" asp-action="Index" asp-controller="Shipper">Geri Don</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}