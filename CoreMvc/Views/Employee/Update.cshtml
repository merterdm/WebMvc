@model EmployeeUpdateDto

<div class="card">
    <div class="car-header">
        <h3> Personel Guncelleme Ekrani</h3>
    </div>
    <div class="card-body">
        <form asp-action="Update" asp-controller="Employee" method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" value="@Model.EmployeeId" />
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.FirstName" class="form-label">Adi</label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.FirstName" placeholder="Adi">
                        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.LastName" class="form-label">Soyadi </label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.LastName" placeholder="Adi">
                        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.Title" class="form-label">Title</label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.Title" placeholder="Title">
                        <span asp-validation-for="@Model.Title" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.BirthDate" class="form-label">Dogum Tarihi</label>
                    </div>
                    <div class="col-7">
                        <input type="datetime-local" class="form-control" asp-for="@Model.BirthDate" placeholder="Dogujm Tarihi">
                        <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.TitleOfCourtesy" class="form-label">Title</label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.TitleOfCourtesy" placeholder="Title">
                        <span asp-validation-for="@Model.TitleOfCourtesy" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.HireDate" class="form-label">İşe Giris Tarihi</label>
                    </div>
                    <div class="col-7">
                        <input type="date" class="form-control" asp-for="@Model.HireDate" placeholder="İşe Giris Tarihi">
                        <span asp-validation-for="@Model.HireDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.Address" class="form-label">Adress</label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.Address" placeholder="Adress">
                        <span asp-validation-for="@Model.Address" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.Country" class="form-label">Ulke</label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.Country" placeholder="Ulke">
                        <span asp-validation-for="@Model.Country" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.City" class="form-label">Sehir</label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.City" placeholder="Sehir">
                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="mb-3">
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a type="button" class="btn btn-info" asp-action="Index" asp-controller="Shipper">Geri Don</a>
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}