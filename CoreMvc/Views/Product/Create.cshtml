@model ProductInsertDto

<div class="card">

    <div class="card-header">
        <h3>Product Insert </h3>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="Product" method="post">
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.ProductName" class="form-label">Product Name</label>
                    </div>
                    <div class="col-7">
                        <input type="text" class="form-control" asp-for="@Model.ProductName" placeholder="Product Name">
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.CategoryName" class="form-label">Category Name</label>
                    </div>
                    <div class="col-7">
                        <select asp-for="@Model.CategoryId" asp-items="@Model.CategoryName">
                            <option value="0" selected>Bir Category Seciniz</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <div class="row">
                    <div class="col-5">
                        <label asp-for="@Model.SupplierName" class="form-label">Suplier Name</label>
                    </div>
                    <div class="col-7">
                        <select asp-for="@Model.SupplierId" asp-items="@Model.SupplierName">
                            <option value="0" selected>Bir Tedarikci  Seciniz</option>

                        </select>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Kaydet</button>
                <a type="button" class="btn btn-info" asp-action="Index" asp-controller="Product">Geri Don</a>
            </div>
        </form>
    </div>

</div>